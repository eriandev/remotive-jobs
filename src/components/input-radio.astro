---
import Image from '@/components/image.astro'

interface Props {
  text?: string
  name: string
  label: string
  value: string
  imageName?: string
}

const { label, name, text, value, imageName } = Astro.props
---

<label class="grid w-max cursor-pointer grid-cols-[repeat(2,fit-content(100%))] items-center gap-2">
  <input
    {name}
    {value}
    type="radio"
    class='relative size-4 cursor-pointer appearance-none rounded-full border border-gray checked:after:absolute checked:after:top-0.5 checked:after:left-0.5 checked:after:h-2.5 checked:after:w-2.5 checked:after:rounded-full checked:after:bg-primary checked:after:content-[""]'
  />
  <div class="grid grid-cols-[repeat(2,fit-content(100%))] gap-1 leading-5">
    {
      imageName ? (
        <Image alt={label} name={imageName} width={20} height={20} class="size-5" />
      ) : (
        <span class="size-5">{text}</span>
      )
    }
    <span class="font-light">{label}</span>
  </div>
</label>
