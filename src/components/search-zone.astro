---
import Button from '@/components/button.astro'
import InputSearch from '@/components/input-search.astro'
---

<section
  class="flex h-35 w-full flex-wrap items-center justify-center rounded-lg bg-[url(/remotive-jobs/bg-search-zone.png)] bg-center bg-no-repeat px-4"
>
  <article
    class="grid w-full max-w-180 grid-cols-[auto_minmax(80px,100%)_auto] items-center gap-1.5 rounded bg-white p-1 pl-4"
  >
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20" fill="#B9BDCF">
      <path d="M0 0h24v24H0z" fill="none"></path>
      <path
        d="M14 6V4h-4v2h4zM4 8v11h16V8H4zm16-2c1.11 0 2 .89 2 2v11c0 1.11-.89 2-2 2H4c-1.11 0-2-.89-2-2l.01-11c0-1.11.88-2 1.99-2h4V4c0-1.11.89-2 2-2h4c1.11 0 2 .89 2 2v2h4z"
        fill-rule="evenodd"></path>
    </svg>
    <InputSearch placeholder="Title, companies, expertise or benefits" />
    <Button>Search</Button>
  </article>
</section>
