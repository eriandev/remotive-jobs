---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {
  as?: 'main' | 'header' | 'nav' | 'section' | 'article' | 'footer' | 'aside' | 'div'
  unlimited?: boolean
}

const { as: Tag = 'div', class: extraClass, unlimited = false, ...restProps } = Astro.props
---

<Tag class:list={[{ 'mx-auto max-w-300 px-3 xl:px-0': !unlimited }, extraClass]} {...restProps}>
  <slot />
</Tag>
